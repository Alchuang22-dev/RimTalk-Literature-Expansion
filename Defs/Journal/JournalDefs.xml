<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <JobDef>
    <defName>RimTalk_WriteJournal</defName>
    <driverClass>RimTalk_LiteratureExpansion.journal.JobDriver_WriteJournal</driverClass>
    <reportString>writing a journal entry.</reportString>
    <casualInterruptible>true</casualInterruptible>
    <playerInterruptible>true</playerInterruptible>
    <checkOverrideOnDamageMode>Always</checkOverrideOnDamageMode>
  </JobDef>

  <ThingDef ParentName="BookBase">
    <defName>RimTalk_JournalBook</defName>
    <label>journal</label>
    <description>A personal journal bound in plain leather. The handwriting inside is fresh.</description>
    <graphicData>
      <texPath>Things/Item/Book/Novel/Novel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>
    <uiIconPath>Things/Item/Book/Novel/Novel</uiIconPath>
    <statBases>
      <MarketValue>20</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Book">
        <nameMaker>Namer_Novel</nameMaker>
        <descriptionMaker>Description_Novel</descriptionMaker>
        <ageYearsRange>0~0.5</ageYearsRange>
        <openGraphic>
          <texPath>Things/Item/Book/Novel/Novel_Open</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>0.7</drawSize>
        </openGraphic>
        <verticalGraphic>
          <texPath>Things/Item/Book/Novel/Novel_Vertical</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <addTopAltitudeBias>true</addTopAltitudeBias>
        </verticalGraphic>
        <doers>
          <li Class="BookOutcomeProperties_JoyFactorModifier" />
        </doers>
      </li>
    </comps>
    <modExtensions>
      <li Class="RimTalk_LiteratureExpansion.book.journal.JournalBookExtension" />
    </modExtensions>
  </ThingDef>

</Defs>
